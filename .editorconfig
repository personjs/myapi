# .editorconfig for Go project

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files settings
[*.go]
indent_size = 4
tab_width = 4
max_line_length = 120

[Makefile]
indent_style = tab
